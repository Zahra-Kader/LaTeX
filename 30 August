\subsubsection{Cross correlation calculation}
The cross correlation between 21 cm emission and kSZ effect is computed as follows.

\begin{equation}
\delta T_{21}(z_i)=
\bar{T}(z_i)D(z_i)(b_{HI}+f\mu_k^2)\int\frac{d^3k}{(2\pi)^3}\delta_m(\vec{k})v_{HI}e^{i\vec{k}.\vec{x}}
\end{equation}

where we again use linear theory to express velocity in terms of the matter density, $v_{HI}(\vec{k})=\frac{if(z)H(z)\delta_{m}(\vec{k})\vec{k}}{(1+z)k^2}$.
We can expand the temperature fluctuations in spherical harmonics which gives

\begin{equation}
\alpha_{lm}(z_i)=\sum_{lm}\delta T_{21}(z_i)Y_l^{m*}(\hat{\theta})
\end{equation}
Now, the Rayleigh expansion describes plane waves as a sum of spherical waves and is given as

\begin{equation}
e^{i\vec{k}.\vec{x}}=4\pi\sum_{lm}(i)^l j_l(k\chi)Y_l^{m*}(\hat{k})Y_l^{m}(\hat{\theta})
\end{equation}
Putting this together we obtain the simplified expression

\begin{equation}
\alpha_{lm}^{21}(z_i)=4\pi i^l\bar{T}(z_i)D(z_i)(b_{HI}+f\mu_k^2)\int\frac{d^3k}{(2\pi)^3}\delta_m(\vec{k}) j_l(k\chi)Y_l^{m}(\hat{k})
\end{equation}

The kSZ signal can likewise be written as 

\begin{equation}
\begin{aligned}
\delta T_{kSZ}&=\frac{-T_{rad}}{c}\int d\chi g(\chi)\hat{\theta}.q(\vec{x})\\
%&=\frac{-iT_{rad}}{c}\int d\chi g(\chi)\int \frac{d^3k}{(2\pi)^3}\frac{fH(z)}{1+z}\frac{\hat{\theta}.\hat{k}}{k}\delta(\vec{k})e^{i\vec{k}.\vec{x}}\\
&=\frac{-iT_{rad}}{c}\int d\chi u(\chi)\int \frac{d^3k}{(2\pi)^3}\frac{\hat{\theta}.\hat{k}}{k}\delta_m(\vec{k})e^{i\vec{k}.\vec{x}}\\
&=\frac{-T_{rad}}{c}\int d\chi u(\chi)\int \frac{d^3k}{(2\pi)^3}\frac{1}{k^2}\delta_m(\vec{k})\frac{\partial e^{i\vec{k}.\vec{x}}}{\partial\chi}
\end{aligned}
\end{equation}
Again expanding in spherical harmonics with the Rayleigh expansion gives

\begin{equation}
\begin{aligned}
\alpha_{lm}^{kSZ}&=\frac{T_{rad}}{c}4\pi i^l \int\frac{d^3k}{(2\pi)^3}\frac{1}{k^2}\delta_m(\vec{k}) \int d\chi u(\chi) \frac{\partial j_l(k\chi)}{\partial \chi}Y_l^{m}(\hat{k})\\
&=-\frac{T_{rad}}{c}4\pi i^l \int\frac{d^3k}{(2\pi)^3}\frac{1}{k^2}\delta_m(\vec{k}) \int d\chi  \frac{\partial u(\chi)}{\partial \chi}j_l(k\chi) Y_l^{m}(\hat{k})
\end{aligned}
\end{equation}
where in the second line we use integration by parts
Computing the cross correlation gives

\begin{equation}
\begin{aligned}
C_l^{21-kSZ}(l,z)&=<\alpha_{lm}^{21}(z_i)\alpha_{lm}^{*kSZ}>\\
&=-\frac{T_{rad}}{c}\frac{1}{2\pi^4}\bar{T}(z_i)D(z_i)(b_{HI}+f\mu_k^2)\int\frac{d^3k}{(2\pi)^3} j_l(k\chi)\\
&\int\frac{d^3k'}{(2\pi)^3}\frac{1}{k'^2} \int d\chi'  \frac{\partial u(\chi')}{\partial \chi'}j_l(k'\chi') Y_l^{m}(\hat{k})Y_l^{m*}(\hat{k'})<\delta_m(\vec{k})\delta_m^*(\vec{k'})>
\end{aligned}
\end{equation}

\end{document}








The cross correlation between 21 cm emission and kSZ effect is computed using the same formalism that was used in the 21 cm-Doppler cross correlation. However, further fluctuations in neutral Hydrogen are considered in the patchy reionisation model. Therefore, the 21 cm becomes

\begin{equation}
\delta T_{21}(\vec{k},z_i)=
\bar{T}(z_i)D(z_i)(1+f\mu_k^2)\int\frac{d^3k'}{(2\pi)^3}\delta(\vec{k}')\delta_{x_H}(\vec{k}-\vec{k}')e^{i\vec{k}.\vec{x}}
\end{equation}
The kSZ expression is

\begin{equation}
\begin{aligned}
\delta T_{kSZ}=&\frac{-T_{rad}}{c}\int d\chi g(\chi)\hat{\theta}.q(\vec{x})\\
%&=\frac{-iT_{rad}}{c}\int d\chi g(\chi)\int \frac{d^3k}{(2\pi)^3}\frac{fH(z)}{1+z}\frac{\hat{\theta}.\hat{k}}{k}\delta(\vec{k}')\delta_x(\vec{k}-\vec{k}')e^{i\vec{k}.\vec{x}}\\
&=\frac{-iT_{rad}}{c}\int d\chi u(\chi)\int \frac{d^3k'}{(2\pi)^3}\frac{\hat{\theta}.\hat{k}}{k}\delta(\vec{k}')\delta_x(\vec{k}-\vec{k}')e^{i\vec{k}.\vec{x}}
\end{aligned}
\end{equation}

Following the steps outlined in \ref{Cross corr doppler 21 cm} gives 

\begin{equation}
\begin{aligned}
C_l(l,z_i)=&\frac{-T_{rad}}{c}\frac{T(z_i)D(z_i)(1+f\mu_k^2)}{\chi^2 r_\nu}\int d\chi' f_2(\chi')\int \frac{d^3k'}{(2\pi)^3}\frac{1}{k'^2}\\
&\int \frac{d^3k''}{(2\pi)^3} <\delta(\vec{k_1})\delta_{x_H}(\vec{k_1}-\vec{k}')\delta^*(\vec{k_2})\delta^*_{x_H}(\vec{k_2}-\vec{k}'')>
\end{aligned}
\end{equation}
where we wrote $\delta_{x_e}=\delta^*_{x_H}$ since $x_H=1-x_e$. Using Wick's Theorem, this simplifies to

\begin{equation}
\begin{aligned}
C_l(l,z_i)=&\frac{-T_{rad}}{c}\frac{T(z_i)D(z_i)(1+f\mu_k^2)}{\chi^2 r_\nu}\int d\chi' f_2(\chi')\\&\int \frac{d^3k'}{(2\pi)^3}\frac{1}{k'^2}
[P_{\delta\delta}(\vec{k}')P_{xx}(\vec{k}-\vec{k}')+P_{\delta x}(\vec{k}')P_{\delta x}(\vec{k}-\vec{k}')]
\end{aligned}
\end{equation}
where $k=l/\chi$. This simplifies to

\begin{equation}
C_l(l,z_i)=\frac{-T_{rad}}{c}\frac{T(z_i)D(z_i)(1+f\mu_k^2)}{\chi^2 r_\nu} u(\chi_r)\int \frac{d^3k'}{(2\pi)^3}\frac{1}{k'^2}
[P_{\delta\delta}(\vec{k}')P_{xx}(\vec{k}-\vec{k}')+P_{\delta x}(\vec{k}')P_{\delta x}(\vec{k}-\vec{k}')]
\end{equation}
where $k=l/\chi_r$.



\begin{equation}
\delta T_{21}=\int d\chi \int \frac{d^3\vec{k}'}{(2\pi)^3}\frac{\overline{T}(z)D(z)[b_{HI}+f\mu_k^2]}{(\chi_{\parallel}^2)r_\nu(z)}\delta(\vec{k}-\vec{k}')\delta_{x_H}(\vec{k}')e^{i\vec{k}.x}
\end{equation}

\begin{equation}
\begin{aligned}
&<\delta T_{21}(\vec{l},y;z_i)p^*(\vec{l}')>=(2\pi)^2\delta^2(\vec{l}-\vec{l}')C_l^{21-p}(y;z_i)\\&
\Rightarrow C_l^{21-p}(y;z_i)=\int \frac{d^2\vec{l'}}{(2\pi)^2} <\delta T_{21}(\vec{l},y;z_i) p^*(\vec{l'})>
\end{aligned}
\end{equation}
Substituting equation \ref{q(k)} into equation \ref{p(kappa) temp distortion in fourier space} we have

\begin{equation}
\begin{aligned}
C_l^{21-p}(y;z_i)=&\int \frac{d^2\vec{l'}}{(2\pi)^2}\frac{\overline{T}(z_i)D(z_i)[b_{HI}+f\mu_k^2]}{(\chi_{\parallel}^2)r_\nu(z_i)} \int_{0}^{\eta_0} d\chi g(\chi)\int d^2\theta \int \frac{d^3k}{(2\pi)^3} \hat{\theta}.\vec{q}(\vec{k})e^{-i\vec{l}'.\vec{\theta}+i\vec{k}.\vec{x}}\\&\frac{ia\dot{D}D}{2D_0^2} \int \frac{d^3k'}{(2\pi^3)}<\delta_0({\vec{K}})\delta_0^*(\vec{k}')\delta_0^*(\vec{k}-\vec{k'})>\left[\frac{\vec{k}-\vec{k'}}{|\vec{k}-\vec{k}'|^2}+\frac{\vec{k}'}{|\vec{k}'|^2}\right]
\end{aligned}
\end{equation}
%we use a different k vector, K, to differentiate the wave mode of 21 cm from those of kSZ
Using Wicks theorem again for three dimensional gaussian density correlation functions gives

\begin{equation}
<\delta_0({\vec{K}})\delta_0^*(\vec{k}')\delta_0^*(\vec{k}-\vec{k'})>=P(K)[\delta^3(K-k')\delta^3(K-k+k')]
\end{equation}
Also, taking the z components as was done earlier gives

\begin{equation}
\begin{aligned}
C_l^{21-p}(y;z_i)=&\int \frac{d^2\vec{l'}}{(2\pi)^2}\frac{\overline{T}(z_i)D(z_i)[b_{HI}+f\mu_k^2]}{(\chi_{\parallel}^2)r_\nu(z_i)} \int_{0}^{\eta_0} d\chi g(\chi)\int d^2\theta \int \frac{d^3k}{(2\pi)^3} \hat{\theta}.\vec{q}(\vec{k})e^{-i\vec{l}'.\vec{\theta}+i\vec{k}.\vec{x}}\\&\frac{ia\dot{D}D}{2D_0^2} \int \frac{d^3k'}{(2\pi^3)}P(K)[\delta^3(K-k')\delta^3(K-k+k')]\left[k_z'\frac{b^2-a^2}{a^2b^2}+\frac{k_z}{b^2}\right]
\end{aligned}
\end{equation}

