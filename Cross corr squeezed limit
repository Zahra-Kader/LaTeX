\newpage 
\subsubsection{21cm-linear kSZ Cross-correlation}

The 21-cm momentum field is defined as
\begin{equation}
p_{21}(\vec{l},y;\chi_i)=\frac{q_\perp^{21}(\vec{k}_\perp \chi,k_\parallel r_\nu)}{\chi^2 r_\nu}
\end{equation}
where 
\begin{equation}
q_\perp^{21}=\int \frac{d^3k'}{(2\pi)^3}\delta_{21}(\vec{k}-\vec{k}')\vec{v}_{21}(\vec{k}')
\end{equation}
The expression for the 21-cm momentum field is

\begin{equation}
p_{21}(\vec{l}_1)=\int \frac{dk_{1\parallel}}{2\pi}e^{ik_{1\parallel} \chi(z_i)}\int \frac{d^3k'}{(2\pi)^3}\hat{\theta}_1.(\delta_{21}(\vec{k_1}-\vec{k}')\vec{v}_{21}(\vec{k}'))
\end{equation}
Combining this with equation \ref{p kSZ of l2} for the kSZ momentum, $p_{kSZ}$, 

\begin{equation}
\begin{aligned}
C_l^{p_{21}p_e}=&\frac{1}{2}\frac{T_{rad}}{c}\int \frac{d^2l_2}{(2\pi)^2} \int d\chi_2 \widetilde {g}(\chi_2) \int \frac{dk_{1\parallel}}{2\pi}e^{ik_{1\parallel} \chi(z_i)}\int \frac{dk_{2\parallel}}{2\pi}e^{-ik_{2\parallel} \chi_2}\int \frac{d^3k'}{(2\pi)^3}\int\frac{d^3k''}{(2\pi)^3}\\ 
&<\hat{\theta}_1.(\delta_{21}(\vec{k}')\vec{v}_{21}(\vec{k_1}-\vec{k}'))  \hat{\theta}_2.(\delta_e(\vec{k_2}-\vec{k}'')\vec{v}_e(\vec{k}''))>
%&=-\frac{T_{rad}}{c}\frac{\bar{T}(z_i)D(z_i)(b+f\mu_k^2)}{\chi^2(z_i)r_\nu(z_i)}\left(\frac{a(z_i)\dot{D}(z_i)D(z_i)}{2{D_0}^2}\right)\int \frac{d^2k_{2\perp}}{(2\pi)^2} \int d\chi_2 \chi_2^2 \widetilde {g}(\chi_2) \left(\frac{a(\chi_2)\dot{D}(\chi_2)D(\chi_2)}{2{D_0}^2}\right)\\ 
%&\int \frac{dk_{1\parallel}}{2\pi}e^{ik_{1\parallel} \chi(z_i)}\int \frac{dk_{2\parallel}}{2\pi}e^{-ik_{2\parallel} \chi_2}\int \frac{d^2k'_\perp}{(2\pi)^2}\frac{dk'_\parallel}{2\pi}
%\int \frac{d^2k''_\perp}{(2\pi)^2}\frac{dk''_\parallel}{2\pi} \left<\delta_0(\vec{k}')\delta_0(\vec{k_1}-\vec{k}')  \delta_0^*(\vec{k}'')\delta_0^*(\vec{k_2}-\vec{k}'')\right>\\
%&\hat{\theta}_1.\left[\frac{\vec{k}_1-\vec{k'}}{|\vec{k}_1-\vec{k}'|^2}+\frac{\vec{k}'}{|\vec{k}'|^2}\right]\hat{\theta}_2.\left[\frac{\vec{k_2}-\vec{k}''}{|\vec{k_2}-\vec{k}''|^2}+\frac{\vec{k}''}{|\vec{k}''|^2}\right]
\end{aligned}
\end{equation}

Applying Wicks theorem we get
\begin{equation}\label{cross corr non limber}
\begin{aligned}
C_l^{p_{21}p_e}=&\frac{1}{2}\frac{T_{rad}}{c}\int d\chi_2 \widetilde {g}(\chi_2) \chi_2^2\int \frac{dk_{\parallel}}{2\pi}e^{ik_{\parallel} (\chi_1-\chi_2)} 
\int\frac{d^2k'_\perp}{(2\pi)^2}\frac{dk'_\parallel}{2\pi}\\
&([\hat{\theta}.\hat{k}'][\hat{\theta}.\hat{k}']P_{\delta_{21} \delta_e}(K)P_{v_{21}v_e}(k')+[\hat{\theta}.\hat{k}'][\hat{\theta}.\hat{K}]P_{\delta_e v_{21}}(k')P_{\delta_{21} v_e}(K))
\end{aligned}
\end{equation}


%\begin{equation3
%\begin{aligned}
%C_l=&\frac{T_{rad}}{c}\frac{\bar{T}(z_i)D(z_i)(b+f\mu_k^2)}{\chi^2(z_i)r_\nu(z_i)}\left(\frac{a(z_i)\dot{D}(z_i)D(z_i)}{2{D_0}^2}\right)\int d\chi_2 {g}(\chi_2) \left(\frac{a(\chi_2)\dot{D}(\chi_2)D(\chi_2)}{2{D_0}^2}\right)\\
%&\int \frac{dk_{\parallel}}{2\pi}e^{ik_{\parallel} (\chi(z_i)-\chi_2)}\int \frac{d^2k'_\perp}{(2\pi)^2}\frac{dk'_\parallel}{2\pi}
%P(k')P(|\vec{k}-\vec{k}'|)\left(\hat{\theta}.\left[\frac{\vec{k}-\vec{k'}}{|\vec{k}-\vec{k}'|^2}+\frac{\vec{k}'}{|\vec{k}'|^2}\right]\hat{\theta}.\left[\frac{\vec{k}-\vec{k'}}{|\vec{k}-\vec{k}'|^2}+\frac{\vec{k}'}{|\vec{k}'|^2}\right]\right)\\
%&=\frac{T_{rad}}{c}\frac{\bar{T}(z_i)D(z_i)(b+f\mu_k^2)}{\chi^2(z_i)r_\nu(z_i)}\left(\frac{a(z_i)\dot{D}(z_i)D(z_i)}{2{D_0}^2}\right)\int d\chi_2 {g}(\chi_2) \left(\frac{a(\chi_2)\dot{D}(\chi_2)D(\chi_2)}{2{D_0}^2}\right)\\
%&\int \frac{dy}{2\pi r_\nu}e^{iy (\chi(z_i)-\chi_2)/r_\nu}\int \frac{d^2k'_\perp}{(2\pi)^2}\frac{dk'_\parallel}{2\pi}
%P(k')P(|\vec{k}-\vec{k}'|)\left(\hat{\theta}.\left[\frac{\vec{k}-\vec{k'}}{|\vec{k}-\vec{k}'|^2}+\frac{\vec{k}'}{|\vec{k}'|^2}\right]\hat{\theta}.\left[\frac{\vec{k}-\vec{k'}}{|\vec{k}-\vec{k}'|^2}+\frac{\vec{k}'}{|\vec{k}'|^2}\right]\right)
%\end{aligned}
%\end{equation}

The $d^3k'$ integral is the familiar $F(k)$ expression which we have come across in the linear kSZ calculation.

The exact expression that I am coding up is

\begin{equation}\label{Cl cross corr that I am coding}
\begin{aligned}
C_l^{p_{21}p_e}&=\frac{1}{16 \pi^3} T_{rad} x \left(\frac{\sigma_T \rho_{c0}}{\mu_e m_p}\right) \int dk_\parallel \int \frac{dz}{H(z)} \int d\mu' \int k'^2 dk'  \left(\frac{H(z_i)}{1+z_i}\right)\left(\frac{H(z)}{1+z}\right) D(z_i)^2\\
& D(z)^2 f(z_i) f(z) 
(1+z)^2  e^{-\tau(z)}   P_{\delta_{21} \delta_e}(k')P_{\delta_{21} \delta_e}(\sqrt{k^2+k'^2-2kk'\mu'})I(k,k',\mu',k_\parallel)cos(k_\parallel(\chi(z_i)-\chi(z)) 
%=C_l^{p_{21}p_e}&=\frac{1}{16 \pi^3} T_{rad} x \bar{T}(b_{HI}+f\mu_k^2)\left(\frac{\sigma_T \rho_{c0}}{\mu_e m_p}\right) \int dk_\parallel \int \frac{dz}{H(z)} \int d\mu' \int k'^2 dk'  \left(\frac{H(z_i)}{1+z_i}\right)\left(\frac{H(z)}{1+z}\right) D(z_i)^2\\
%& D(z)^2 f(z_i) f(z) 
%(1+z)^2  e^{-\tau(z)}   P_{\delta_{21} \delta_e}(k')P_{\delta_{21} \delta_e}(\sqrt{k^2+k'^2-2kk'\mu'})I(k,k',\mu',k_\parallel)cos(k_\parallel(\chi(z_i)-\chi(z)) 
\end{aligned}
\end{equation}
where $I(k,k',\mu',k_\parallel)$ is given in equation \ref{I non limber}.

\begin{figure}[h!]
	\centering
	\includegraphics[width=0.7\linewidth]{".spyder-py3/cross corr up to k' of 1e-2 and kpar of 2e-4"}
	\caption{Cross correlation of 21 cm and OV spectra integrating up to $k'=10^{-2}$ Mpc$^{-1}$.}
	\label{fig:cross-corr-up-to-k-of-1e-2-and-kpar-of-2e-4}
\end{figure}


Now, let's refer to equation \ref{cross corr non limber}. The expression in the first term $P_{\delta_{21} \delta_e}(\vec{K})P_{v_{21}v_e}(\vec{k}')=\frac{P_{\delta_{21} \delta_e}(\vec{K})P_{\delta_{21} \delta_e}(\vec{k}')}{k'^2}$ while the second term gives
$P_{\delta_e v_{21}}(\vec{k}')P_{\delta_{21} v_e}(\vec{K})=\frac{P_{\delta_{21} \delta_e}(\vec{k}')P_{\delta_{21} \delta_e}(\vec{K})}{k'(|\vec{k}-\vec{k}'|)}$. Now, $\vec{k}'$ is the low k mode of the velocity field, $v_{21}$, whereas $\vec{k}-\vec{k}'$ is the high k mode of the density field, $\delta_{21}$. Thus, the second term in equation \ref{cross corr non limber} can be omitted. 

\begin{figure}[h!]
	\centering
	\includegraphics[width=0.7\linewidth]{".spyder-py3/cross corr up to k' of 1e-2 and kpar of 2e-4 partial (without second term)"}
	\caption{Cross correlation of 21 cm and OV spectra integrating up to $k'=10^{-2}$ Mpc$^{-1}$ after omission of the second term of equation \ref{cross corr non limber}.}
	\label{fig:cross-corr-up-to-k-of-1e-2-and-kpar-of-2e-4-partial-without-second-term}
\end{figure}

\clearpage
\textbf{Squeezed limit}

In the squeezed limit, we assume that $k'\ll k, K$. The amplitude of $\vec{K}$ is simplified as

\begin{equation}
|\vec{k}-\vec{k}'|=\sqrt{k^2+k'^2-2\vec{k}.\vec{k}'}=k\sqrt{1-\frac{2\vec{k}.\vec{k}'}{k^2}+\frac{k'^2}{k^2}}\simeq k\left(1-\frac{\vec{k}.\vec{k}'}{k^2}\right)
\end{equation}
where the last equality comes from the use of the taylor expansion.
Using this amplitude, the corresponding power spectrum is

\begin{equation}
P(|\vec{k}-\vec{k}'|)\simeq P(k-\frac{\vec{k}.\vec{k}'}{k}) \simeq P(k)-\frac{\vec{k}.\vec{k}'}{k}\frac{dP(k)}{dk}=P(k)\left(1-\frac{\vec{k}.\vec{k}'}{k^2}\frac{dlnP(k)}{dlnk}\right)
\end{equation}

Now, applying this to the $d^3k'$ integral in equation \ref{cross corr non limber} gives

\begin{equation}
\begin{aligned}
F=&\int\frac{d^3k'}{(2\pi)^3}
([\hat{\theta}.\hat{k}'][\hat{\theta}.\hat{k}']P_{\delta_{21} \delta_e}(K)P_{v_{21}v_e}(k')+[\hat{\theta}.\hat{k}'][\hat{\theta}.\hat{K}]P_{\delta_e v_{21}}(k')P_{\delta_{21} v_e}(K))\\
&=\int\frac{d^3k'}{(2\pi)^3}P_{\delta_{21} \delta_e}(k)P_{\delta_{21} \delta_e}(k')[\hat{\theta}.\hat{k}']\left[1-\frac{\mu'k'}{k}\frac{dlnP_{\delta_{21} \delta_e}(k)}{dlnk}\right] \left[ \frac{[\hat{\theta}.\hat{k}']}{k'^2} + \frac{[\hat{\theta}.\hat{K}]}{kk'} \left(1+\frac{\mu'k'}{k}\right)\right]
\end{aligned}
\end{equation}
We substitute $\hat{\theta}.\hat{k}'$ from equation \ref{k' in los}. The expression $\hat{\theta}.\hat{K}=-sin\alpha cos\phi+cos\alpha sin\phi$ can be simplified in the squeezed limit using


\begin{subequations}
\begin{equation}
sin\alpha=\frac{k'}{|\vec{k}-\vec{k}'|}\sqrt{1-\mu'^2}\simeq\frac{k'\sqrt{1-\mu'^2})}{k}\left(1+\frac{\mu'k'}{k}\right)
\end{equation}
\begin{equation}
cos\alpha=\frac{k-k'\mu'}{|\vec{k}-\vec{k}'|}\simeq\frac{k-k'\mu'}{k}\left(1+\frac{k'\mu'}{k}\right)= 1-\left(\frac{k'\mu'}{k}\right)^2 \simeq 1
\end{equation}
\end{subequations}
This gives the result

\begin{equation}
\hat{\theta}.\hat{K}=-\frac{k'}{k}\sqrt{1-\mu'^2}\left(1+\frac{\mu'k'}{k}\right)\frac{l}{\chi k} +\frac{k_\parallel}{k}
\end{equation}
Putting this together gives

\begin{equation}
\begin{aligned}
F=&\int\frac{d^3k'}{(2\pi)^3}P_{\delta_{21} \delta_e}(k)P_{\delta_{21} \delta_e}(k')\left[\frac{k_\parallel \mu'}{k}+\frac{l}{\chi k}\sqrt{1-\mu'^2}\right]\left[1-\frac{\mu'k'}{k}\frac{dlnP_{\delta_{21} \delta_e}(k)}{dlnk}\right]\left(-\frac{\sqrt{1-\mu'^2}}{k^2}\right.\\ &\left.-\frac{k'\mu'\sqrt{1-\mu'^2}}{k^4}\frac{l}{\chi}+\frac{k_\parallel}{k^2 k'} -\frac{k'\mu'\sqrt{1-\mu'^2}}{k^3} -\frac{k'^2 \mu'^2 \sqrt{1-\mu'^2}}{k^5}\frac{l}{\chi} +\frac{\mu' k_\parallel}{k^3} +\frac{k_\parallel \mu}{k k'^2} + \frac{l\sqrt{1-\mu'^2}}{\chi k k'^2}\right)
\end{aligned}
\end{equation}

\newpage
\textbf{Alternative}

\begin{equation}
\begin{aligned}
C_l^{p_{21}p_e}=&\frac{T_{rad}}{c}\int \frac{d^2l_2}{(2\pi)^2} \int d\chi_2 \widetilde {g}(\chi_2) \int \frac{dk_{1\parallel}}{2\pi}e^{ik_{1\parallel} \chi(z_i)}\int \frac{dk_{2\parallel}}{2\pi}e^{-ik_{2\parallel} \chi_2}\hat{\theta}_1.\int \frac{d^3k'}{(2\pi)^3}\hat{\theta}_2.\int\frac{d^3k''}{(2\pi)^3} \\ 
& D(z_1)^2  D(z_2)^2<\delta_{21}(\vec{k_1}-\vec{k}')\vec{v}_{21}(\vec{k}')  \delta_e(\vec{k_2}-\vec{k}'')\vec{v}_e(\vec{k}'')>\\
=&\frac{T_{rad}}{c}\int \frac{d^2l_2}{(2\pi)^2} \int d\chi_2 \widetilde {g}(\chi_2) \int \frac{dk_{1\parallel}}{2\pi}e^{ik_{1\parallel} \chi(z_i)}\int \frac{dk_{2\parallel}}{2\pi}e^{-ik_{2\parallel} \chi_2}\int \frac{d^3k'}{(2\pi)^3}\int\frac{d^3k''}{(2\pi)^3}\\ 
&f(z_1)\dot{a}(z_1)f(z_2) \dot{a}(z_2)D(z_1)^2  D(z_2)^2<\delta_{21}(\vec{k_1}-\vec{k}')\delta_{21}(\vec{k}')  \delta_e(\vec{k_2}-\vec{k}'')\delta_e(\vec{k}'')>\frac{[\hat{\theta}_1.\hat{k}']}{k'}\frac{[\hat{\theta}_2.\hat{k}'']}{k''}\\
=&\frac{T_{rad}}{c}\int \frac{d^2l_2}{(2\pi)^2} \int d\chi_2 \widetilde {g}(\chi_2) \int \frac{dk_{1\parallel}}{2\pi}e^{ik_{1\parallel} \chi(z_i)}\int \frac{dk_{2\parallel}}{2\pi}e^{-ik_{2\parallel} \chi_2}\int \frac{d^3k'}{(2\pi)^3}\int\frac{d^3k''}{(2\pi)^3}\\ 
&f(z_1)\dot{a}(z_1)f(z_2) \dot{a}(z_2)D(z_1)^2  D(z_2)^2\frac{[\hat{\theta}_1.\hat{k}']}{k'}\frac{[\hat{\theta}_2.\hat{k}'']}{k''} (2\pi)^6 P_{\delta_e \delta_e}(k') P_{\delta_e \delta_e}(|\vec{k_1}-\vec{k}'|)\\
&(\delta^3(\vec{k}'-\vec{k}_2+\vec{k}'')\delta^3(\vec{k}_1-\vec{k}'-\vec{k}'')+\delta^3(\vec{k}'-\vec{k}'')\delta^3(\vec{k}_1-\vec{k}'-\vec{k}_2+\vec{k}''))
%&=-\frac{T_{rad}}{c}\frac{\bar{T}(z_i)D(z_i)(b+f\mu_k^2)}{\chi^2(z_i)r_\nu(z_i)}\left(\frac{a(z_i)\dot{D}(z_i)D(z_i)}{2{D_0}^2}\right)\int \frac{d^2k_{2\perp}}{(2\pi)^2} \int d\chi_2 \chi_2^2 \widetilde {g}(\chi_2) \left(\frac{a(\chi_2)\dot{D}(\chi_2)D(\chi_2)}{2{D_0}^2}\right)\\ 
%&\int \frac{dk_{1\parallel}}{2\pi}e^{ik_{1\parallel} \chi(z_i)}\int \frac{dk_{2\parallel}}{2\pi}e^{-ik_{2\parallel} \chi_2}\int \frac{d^2k'_\perp}{(2\pi)^2}\frac{dk'_\parallel}{2\pi}
%\int \frac{d^2k''_\perp}{(2\pi)^2}\frac{dk''_\parallel}{2\pi} \left<\delta_0(\vec{k}')\delta_0(\vec{k_1}-\vec{k}')  \delta_0^*(\vec{k}'')\delta_0^*(\vec{k_2}-\vec{k}'')\right>\\
%&\hat{\theta}_1.\left[\frac{\vec{k}_1-\vec{k'}}{|\vec{k}_1-\vec{k}'|^2}+\frac{\vec{k}'}{|\vec{k}'|^2}\right]\hat{\theta}_2.\left[\frac{\vec{k_2}-\vec{k}''}{|\vec{k_2}-\vec{k}''|^2}+\frac{\vec{k}''}{|\vec{k}''|^2}\right]
\end{aligned}
\end{equation}


Applying Wicks theorem we get

\begin{equation}
\begin{aligned}
C_l=&\frac{1}{2\pi}\frac{T_{rad}}{c}\int \frac{d^2l_2}{(2\pi)^2} \int d\chi_2 \widetilde {g}(\chi_2) \int \frac{dk_{\parallel}}{2\pi}e^{ik_{\parallel} \chi(z_i)} \int d^3k'\\ 
&f(z_1)\dot{a}(z_1)f(z_2) \dot{a}(z_2)D(z_1)^2  D(z_2)^2\frac{[\hat{\theta}.\hat{k}']}{k'}\frac{[\hat{\theta}.\hat{k}']}{k'} P_{\delta_e \delta_e}(k') P_{\delta_e \delta_e}(|\vec{k}-\vec{k}'|)\\
&=\frac{1}{2\pi}\frac{T_{rad}}{c}\int \frac{d^2l_2}{(2\pi)^2} \int d\chi_2 \widetilde {g}(\chi_2) \int \frac{dk_{\parallel}}{2\pi}e^{ik_{\parallel} \chi(z_i)} \int d^3k'\\ 
&f(z_1)\dot{a}(z_1)f(z_2) \dot{a}(z_2)D(z_1)^2  D(z_2)^2[\hat{\theta}.\hat{k}']^2 P_{v_e v_e}(k') P_{\delta_e \delta_e}(|\vec{k}-\vec{k}'|)
\end{aligned}
\end{equation}

Applying the squeezed limit gives

\begin{equation}
\begin{aligned}
C_l=&\frac{1}{2\pi}\frac{T_{rad}}{c}\int \frac{d^2l_2}{(2\pi)^2} \int d\chi_2 \widetilde {g}(\chi_2) \int \frac{dk_{\parallel}}{2\pi}e^{ik_{\parallel} \chi(z_i)} \int d^3k'\\ 
&f(z_1)\dot{a}(z_1)f(z_2) \dot{a}(z_2)D(z_1)^2  D(z_2)^2[\hat{\theta}.\hat{k}']^2 P_{v_e v_e}(k') P_{\delta_e \delta_e}(k)\left(1-\frac{\mu'k'}{k}\frac{dlnP_{\delta_e \delta_e}(k)}{dlnk}\right)\\
&=\frac{1}{2\pi}\frac{T_{rad}}{c}\int \frac{d^2l_2}{(2\pi)^2} \int d\chi_2 \widetilde {g}(\chi_2) \int \frac{dk_{\parallel}}{2\pi}e^{ik_{\parallel} \chi(z_i)} \int d^3k'\\ 
&f(z_1)\dot{a}(z_1)f(z_2) \dot{a}(z_2)D(z_1)^2  D(z_2)^2[\hat{\theta}.\hat{k}']^2 P_{v_e v_e}(k') P_{\delta_e \delta_e}(k)
\end{aligned}
\end{equation}
where we neglect the $\frac{k'}{k}$ term which is small for $k \gg k'$.

Plotting this gives

\begin{figure}[h!]
	\centering
	\includegraphics[width=0.7\linewidth]{".spyder-py3/cross corr up to k' of 1e-2 and kpar of 2e-4 squeezed limit"}
	\caption{Cross correlation Cross correlation of 21 cm and OV spectra integrating up to $k'=10^{-2}$ Mpc$^{-1}$ in the squeezed limit.}
	\label{fig:cross-corr-up-to-k-of-1e-2-and-kpar-of-2e-4-squeezed-limit}
\end{figure}

\end{document}








I am plotting this in python for the non-Limber case

\begin{equation}
\begin{aligned}
C_l&=10^{12} T_{rad}^2 x^2\left(\frac{\sigma_T \rho_{g0}}{\mu_e m_p}\right)^2(1+z_1)(1+z_2)e^{-\tau(z_1)}e^{-\tau(z_2)}f(z_1)f(z_2)D_1(z_1)^2D_1(z_2)^2/\chi(z_1)^2\\ &cos(k_\parallel(chi(z_1)-chi(z_2))F(\sqrt{k_\parallel^2+l^2/\chi^2} )
\end{aligned}
\end{equation}
with 

\begin{equation}
F(k)=\int \frac{dk'}{(2\pi)^3}P_{\delta \delta}(k')P_{\delta \delta}(|\vec{k}-\vec{k}'|)I(\vec{k},\vec{k}')
\end{equation}

where 
\begin{equation}
I(\vec{k},\vec{k}')=\frac{k(k-2k'\mu')(1-\mu'^2)}{(k'^2+k^2-2kk'\mu')}
\end{equation}


Now, the 21-cm and kSZ signals are assumed to be in different radial directions. We can again write $\vec{a}=\vec{k}'$ and $\vec{b}=\vec{k}-\vec{k}'$. Omitting all constants and $\chi$ integrals for now, we apply the line of sight directions which gives

\begin{equation}
\begin{aligned}
F(l/\chi)&=\int \frac{dk_{\parallel}}{2\pi}e^{ik_{\parallel} (\chi(z_i)-\chi_2)}\int \frac{d^2k'_\perp}{(2\pi)^2}\frac{dk'_\parallel}{2\pi}
P(k')P(|\vec{k}-\vec{k}'|)\left(\frac{a_{z_i}}{a^2}+\frac{b_{z_i}}{b^2}\right)\left(\frac{a_{z_2}}{a^2}+\frac{b_{z_2}}{b^2}\right)\\
&=\int \frac{dk_{\parallel}}{2\pi}e^{ik_{\parallel} (\chi(z_i)-\chi_2)}\int \frac{d^2k'_\perp}{(2\pi)^2}\frac{dk'_\parallel}{2\pi}
P(k')P(|\vec{k}-\vec{k}'|)\left(\frac{k_{z_i}'}{a^2}+\frac{k_{z_i}-k_{z_i}'}{b^2}\right)\left(\frac{k_{z_2}'}{a^2}-\frac{k_{z_2}'}{b^2}\right)\\
&=\int \frac{dk_{\parallel}}{2\pi}e^{ik_{\parallel} (\chi(z_i)-\chi_2)}\int \frac{d^2k'_\perp}{(2\pi)^2}\frac{dk'_\parallel}{2\pi}
P(k')P(|\vec{k}-\vec{k}'|)\left(\frac{k_{z_i}'}{a^2}+\frac{k_{z_i}-k_{z_i}'}{b^2}\right){k'\sqrt{1-\mu'_2^2}}\left(\frac{b^2-a^2}{a^2b^2}\right)
\end{aligned}
\end{equation}
where $a_{z}=k_z'$ and $b_z=k_z-k_z'$. Note that the large redshift range for the kSZ signal allows us to use the Limber approximation, giving $b_{z_2}=-k_{z_2}'$. However, the Limber approximation cannot be applied to the small redshift range of the 21 cm signal which HIRAX will focus on. 
